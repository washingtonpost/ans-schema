{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.5.2/traits/trait_taxonomy.json",
  "title": "Taxonomy",
  "description": "Holds the collection of tags, categories, keywords, etc that describe content.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "keywords": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.5.2/utils/keyword.json"
      },
      "description": "A list of keywords."
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.5.2/utils/tag.json"
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.5.2/utils/section.json"
      }
    },
    "seo_keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
